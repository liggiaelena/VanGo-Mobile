<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitialPage">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="#FFCC00"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:clipToOutline="true" >

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="145dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/icone1" />
    </LinearLayout>

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:backgroundTint="#FFCC00"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="32dp" />

    <!-- BOTÃƒO CRIAR CONTA -->
    <Button
        android:id="@+id/btnCriarConta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Criar conta"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        android:background="@drawable/borda_preta"
        app:layout_constraintTop_toBottomOf="@id/btnEntrar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="32dp" />

    <!-- OU -->
    <TextView
        android:id="@+id/txtOu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ou"
        android:textColor="#888888"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnCriarConta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CONTINUAR COM GOOGLE -->
    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Continuar com Google"
        android:drawableStart="@drawable/ic_google"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:background="@drawable/borda_cinza"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtOu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>